<h1 align="center">Category Listing</h1>
<div align="center">
    <%= will_paginate %>
    <% @categories.each do |category| %>
        <div class="row">
            <div class=" well col-md-4 col-md-offset-4">
                <h2 class="cat_list">
                    <%= link_to "#{category.name}", category_path(category) %>
                </h2>
                <small><%= pluralize(category.articles.count, "article") %></small>
            </div>
        </div>
    <% end %>
    <%= will_paginate %>
</div>
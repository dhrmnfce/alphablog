<h1>Create an Article</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @article do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
            
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
            <%= f.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>
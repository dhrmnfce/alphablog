<h1>All articles</h1>

<h2><%= link_to "Create new article", new_article_path %></h2>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "View article", article_path(article)%></td>
        <td><%= link_to "Edit article", edit_article_path(article) %></td>
    </tr>
    <% end %>
</table>
<h1>All bloggers</h1>
<div align="center"><%= will_paginate %></div>
<% @users.each do |user| %>
    <ul class="user_listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="user_list"><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="user_list"><h1><%= link_to user.username, user_path(user), class: 'user_list' %></h1></li>
                <% if user.articles.any? %>
                    <li class="user_list"><h2><%= pluralize(user.articles.count, "article") %></h2></li>
                <% end %>
            </div>
        </div>
    </ul>
<% end %>
<div align="center"><%= will_paginate %></div>